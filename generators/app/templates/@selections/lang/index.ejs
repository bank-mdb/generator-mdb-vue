import Vue from "vue";
import VueI18n from "vue-i18n";
<%_ if (isAdmin) { _%>
import enLocale from "element-ui/lib/locale/lang/en";
import zhLocale from "element-ui/lib/locale/lang/zh-CN";
<%_ } _%>
import en from "./en";
import zh from "./zh";

Vue.use(VueI18n);

const messages = {
  en: {
    ...en
    <%_ if (isAdmin) { _%>
    ,
    ...enLocale
    <%_ } _%>
  },
  zh: {
    ...zh
    <%_ if (isAdmin) { _%>
    ,
    ...zhLocale
    <%_ } _%>
  }
};

const i18n = new VueI18n({
  locale: localStorage.getItem("language") || "zh",
  messages,
  fallbackLocale: "zh"
});

export default i18n;
